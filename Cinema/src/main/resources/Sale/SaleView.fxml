<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fillWidth="true" prefHeight="684.0" prefWidth="1205.0"
      xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                    minWidth="-Infinity" prefHeight="684.0" prefWidth="1291.0">
            <children>
                <TableView fx:id="tableOfProducts" layoutX="471.0" layoutY="92.0" prefHeight="505.0"
                           prefWidth="364.0">
                    <columns>
                        <TableColumn fx:id="ProductPrice" prefWidth="74.0" text="Price">
                            <cellValueFactory>
                                <PropertyValueFactory property="price"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="ProductAmount" prefWidth="74.0" text="Amount">
                            <cellValueFactory>
                                <PropertyValueFactory property="amount"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="ProductName" prefWidth="215.0" text="Name">
                            <cellValueFactory>
                                <PropertyValueFactory property="name"/>
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
                <Label layoutX="471.0" layoutY="48.0" text="Products">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Label>
                <TableView fx:id="tableOfPack" layoutX="74.0" layoutY="92.0" prefHeight="505.0"
                           prefWidth="364.0">
                    <columns>
                        <TableColumn fx:id="PackName" prefWidth="267.0" text="Name">
                            <cellValueFactory>
                                <PropertyValueFactory property="name"/>
                            </cellValueFactory>
                        </TableColumn>

                        <TableColumn fx:id="PackPrice" prefWidth="96.0" text="Price">
                            <cellValueFactory>
                                <PropertyValueFactory property="price"/>
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
                <Button fx:id="AddNewPack" layoutX="74.0" layoutY="622.0" mnemonicParsing="false"
                        onMouseClicked="#addNewPack" text="Add new pack"/>
                <Label layoutX="74.0" layoutY="48.0" text="Packs">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Label>
                <Button fx:id="removePack" layoutX="351.0" layoutY="622.0" mnemonicParsing="false"
                        onMouseClicked="#removePack" text="Remove pack"/>
                <TableView fx:id="tableOfPackContent" layoutX="868.0" layoutY="92.0"
                           prefHeight="505.0" prefWidth="364.0">
                    <columns>
                        <TableColumn fx:id="PackPOProductID" prefWidth="215.0" text="Product Name">
                            <cellValueFactory>
                                <PropertyValueFactory property="productName"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="PackPOAmount" prefWidth="73.0" text="Amount">
                            <cellValueFactory>
                                <PropertyValueFactory property="amount"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="PackPOPrice" prefWidth="75.0" text="Price">
                            <cellValueFactory>
                                <PropertyValueFactory property="price"/>
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
                <Label layoutX="868.0" layoutY="48.0" text="Content of pack">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Label>
                <Button fx:id="addNewProduct" layoutX="471.0" layoutY="622.0"
                        mnemonicParsing="false" onMouseClicked="#addNewProduct" text="Add product"/>
                <Button fx:id="removeProductFromPack" layoutX="1071.0" layoutY="622.0"
                        mnemonicParsing="false" onMouseClicked="#removeProductFromPack"
                        text="Remove product from pack"/>
                <Button fx:id="addProductToPack" layoutX="868.0" layoutY="622.0"
                        mnemonicParsing="false" onMouseClicked="#addProductToPack"
                        text="Add product to pack"/>
                <Button fx:id="removeProduct" layoutX="731.0" layoutY="622.0"
                        mnemonicParsing="false" onMouseClicked="#removeProduct"
                        text="Remove product"/>
                <Button fx:id="goBack" layoutX="74.0" layoutY="19.0" mnemonicParsing="false"
                        onMouseClicked="#goBack" text="Go Back"/>
            </children>
        </AnchorPane>
    </children>
</VBox>
