                    <columns>
                        <TableColumn fx:id="OrderName" prefWidth="215.0" text="Product Name">
                            <cellValueFactory>
                                <PropertyValueFactory property="packName"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="OrderAmount" prefWidth="79.0" text="Amount">
                            <cellValueFactory>
                                <PropertyValueFactory property="amount"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="OrderPrice" prefWidth="86.0" text="Price">
                            <cellValueFactory>
                                <PropertyValueFactory property="price"/>
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
                <Button fx:id="addPackToOrder" layoutX="472.0" layoutY="238.0"
                        mnemonicParsing="false" onMouseClicked="#addPackToOrder" prefHeight="27.0"
                        prefWidth="116.0" text="----&gt;"/>
