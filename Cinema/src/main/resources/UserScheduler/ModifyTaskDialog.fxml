<VBox alignment="CENTER" prefHeight="170.0" prefWidth="300.0"
      xmlns="http://javafx.com/javafx/8.0.202-ea" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label fx:id="taskLabel" text="Zadanie"/>
        <ChoiceBox fx:id="taskChoice" prefWidth="150.0"/>
        <Label text="Status"/>
        <ChoiceBox fx:id="statusChoice" prefWidth="150.0"/>
        <HBox alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" onAction="#accept" text="Zapisz">
                    <HBox.margin>
                        <Insets right="10.0"/>
                    </HBox.margin>
                </Button>
                <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#delete"
                        text="UsuÅ„"/>
            </children>
            <VBox.margin>
                <Insets top="15.0"/>
            </VBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
    </padding>
</VBox>
