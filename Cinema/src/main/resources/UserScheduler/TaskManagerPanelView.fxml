            <VBox.margin>
                <Insets top="3.0"/>
            </VBox.margin>
        </Label>
        <TextField fx:id="newTaskDesc"/>
        <Button mnemonicParsing="false" onAction="#addTask" prefWidth="225.0" text="Zapisz">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </Button>
        <Label alignment="CENTER" prefWidth="225.0" text="Lista zadaÅ„">
            <VBox.margin>
                <Insets top="5.0"/>
            </VBox.margin>
            <font>
                <Font name="System Bold" size="13.0"/>
            </font>
        </Label>
        <VBox fx:id="tasksListBox" prefHeight="200.0" prefWidth="100.0">
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </VBox>
    </children>
</VBox>
