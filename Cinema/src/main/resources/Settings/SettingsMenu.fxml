<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane maxHeight="Infinity" maxWidth="Infinity" prefHeight="400.0" prefWidth="600.0"
          xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="View.Settings.SettingsMenu">
    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>
    <children>
        <Label text="Ads time" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"/>
        <Label text="2D Ticket price" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2"
               GridPane.vgrow="ALWAYS"/>
        <Label text="3d Ticket price" GridPane.hgrow="ALWAYS" GridPane.rowIndex="3"
               GridPane.vgrow="ALWAYS"/>
        <Label text="VR Ticket price" GridPane.hgrow="ALWAYS" GridPane.rowIndex="4"
               GridPane.vgrow="ALWAYS"/>
        <TextField fx:id="addTime" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"
                   GridPane.vgrow="ALWAYS"/>
        <TextField fx:id="ticketPrice2D" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"
                   GridPane.rowIndex="2" GridPane.vgrow="ALWAYS"/>
        <TextField fx:id="ticketPrice3D" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"
                   GridPane.rowIndex="3" GridPane.vgrow="ALWAYS"/>
        <TextField fx:id="ticketPriceVR" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"
                   GridPane.rowIndex="4" GridPane.vgrow="ALWAYS"/>
        <HBox alignment="CENTER_RIGHT" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"
              GridPane.rowIndex="5">
            <Button fx:id="btnSave" mnemonicParsing="false" onMouseClicked="#save" text="Save">
                <HBox.margin>
                    <Insets right="5.0"/>
                </HBox.margin>
            </Button>
            <Button fx:id="btnCancel" mnemonicParsing="false" onMouseClicked="#cancel"
                    text="Cancel"/>
        </HBox>

    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</GridPane>
